    Algortima6Window:

<MainWindow>:
    name: "main"

    GridLayout:
        cols:2

        Button:
            text: "Reverse Cipher"
            on_press:
                app.root.current = "algoritma1"
                root.manager.transition.direction = "left"
        Button:
            text: "VIGENÃˆRE Cipher"
            on_press:
                app.root.current = "algoritma2"
                root.manager.transition.direction = "left"
        Button:
            text: "Affine Cipher"
            on_press:
                app.root.current = "algoritma3"
                root.manager.transition.direction = "left"
        Button:
            text: "Substitution Cipher"
            on_press:
                app.root.current = "algoritma4"
                root.manager.transition.direction = "left"

        Button:
            text: "Atbash Cipher"
            on_press:
                app.root.current = "algoritma5"
                root.manager.transition.direction = "left"

        Button:
            text: "Baconian Cipher"
            on_press:
                app.root.current = "algoritma6"
                root.manager.transition.direction = "left"
                


<Algortima1Window>:
    name: "algoritma1"
    data: data
    hasilEncode: hasilEncode
    dataEncode: dataEncode
    hasilDecode: hasilDecode
    
    GridLayout:
        cols: 4

        Label:
            text: "Plain Text : "

        TextInput:
            id: data
            multiline: False

        Button:
            text: "Chiper Text :"
            on_press: 
                root.encodeData()

        TextInput:
            id:hasilEncode
            text: "Enkripsi"

        Label:
            text: "Chiper Text :"

        TextInput:
            id: dataEncode

        Button:
            text: "Plain Text"
            on_press: 
                root.decodeData()

        TextInput:
            id: hasilDecode
            text: "Dekripsi"

        Button:
            text: "Back"
            on_press: 
                root.manager.transition.direction = 'right'
                root.manager.current = "main"

